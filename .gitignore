# Ignore generated files
web/sites/*/files/css
web/sites/*/files/js
web/sites/*/files/php
web/sites/*/files/styles
web/sites/*/files/languages
web/sites/*/files/translations/*
private/twig/*

# Explicitly add the translations folder
!web/sites/*/files/translations/.htaccess

# Ignore credentials
auth.json
.env

# Ignore directories generated by Composer
drush/contrib
vendor
web/core
web/modules/contrib
web/themes/contrib
web/profiles/contrib

# Ignore files generated by helm
/gke/helmchart/helm
/gke/helmchart/Chart.lock

# Automated drupal-scafolding ignores
.editorconfig
.gitattributes

# Ignore Drupal's file directory
## web/sites/*/files

# Ignore files generated by PhpStorm
.idea

# Ignore files generated by MacOS
.DS_Store

# Ignore configuration files that may contain sensitive information.
web/sites/*/settings.local.php

# Ignore archives
*.sql
*.gz
*.tar
*.zip

# Explicitly allow default.sql.gz
!default.sql.gz

# Lint cache
.phplint-cache

# Miscellaneaus
web/sites/example.*
web/sites/simpletest